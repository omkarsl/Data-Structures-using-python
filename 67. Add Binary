class Solution(object):
    def addBinary(self, a, b):
        i = len(a) - 1
        j = len(b) - 1
        carry = 0
        result = []

        while i >= 0 or j >= 0 or carry:
            digitA = int(a[i]) if i >= 0 else 0
            digitB = int(b[j]) if j >= 0 else 0

            total = digitA + digitB + carry

            bit = total % 2
            carry = total // 2

            result.append(str(bit))

            i -= 1
            j -= 1

        result.reverse()
        return "".join(result)
